<p id="notice"><%= notice %></p>


  <h2><%= @brewery.name %> 
    <% if not @brewery.active %>
      <span class="label label-info">retired</span>
    <% end %>
  </h2>


<p>
  <i>Established at 
  <%= @brewery.year %></i>
</p>
<p> Number of beers 
<%= @brewery.beers.count %></p>
<p><% @brewery.beers.each do |beer| %>
   <%= link_to beer.name, beer %>
 <% end %></p>
<p>
<% if @brewery.ratings.empty? %>
 brewery has no ratings!
<% else %>
 <%= round(@brewery.average_rating) %>
<% end %>
</p>


<%= link_to "change_activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary"%>
<%= link_to 'Edit', edit_brewery_path(@brewery) %> |
<%= link_to 'Back', breweries_path %>
